---
// Navigation component
---

<nav
  class='bg-white bg-opacity-20 backdrop-blur-sm shadow-sm border-b border-gray-200 border-opacity-30 sticky top-0 z-[100]'
>
  <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8'>
    <div class='flex justify-between items-center h-16'>
      <!-- Logo -->
      <div class='flex items-center'>
        <div class='flex-shrink-0 flex items-center'></div>
      </div>

      <!-- Desktop Navigation -->
      <div class='hidden md:block'>
        <div class='ml-10 flex items-baseline space-x-8'>
          <a
            href='#info'
            class='text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors'
          >
            Más información
          </a>
          <a
            href='#contact'
            class='text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium transition-colors'
          >
            Contacto
          </a>
          <button
            id='nav-contact-btn'
            class='bg-primary-600 bg-opacity-80 hover:bg-opacity-100 text-white px-4 py-2 rounded-full text-sm font-medium transition-[background-color,transform] duration-300 ease-out active:scale-95 hover:scale-105'
            onclick="document.getElementById('learn-more-btn').click()"
          >
            Contáctanos
          </button>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class='md:hidden'>
        <button
          id='mobile-menu-btn'
          class='text-gray-700 hover:text-gray-900 focus:outline-none focus:text-gray-900'
        >
          <svg
            class='h-6 w-6'
            fill='none'
            viewBox='0 0 24 24'
            stroke='currentColor'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              stroke-width='2'
              d='M4 6h16M4 12h16M4 18h16'></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id='mobile-menu' class='hidden md:hidden pb-4'>
      <div class='space-y-2'>
        <a
          href='#info'
          class='block text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium'
        >
          Más información
        </a>
        <a
          href='#contact'
          class='block text-gray-700 hover:text-primary-600 px-3 py-2 rounded-md text-sm font-medium'
        >
          Contacto
        </a>
        <button
          class='w-full text-left bg-primary-600 bg-opacity-80 hover:bg-opacity-100 text-white px-3 py-2 rounded-full text-sm font-medium transition-[background-color,transform] duration-300 ease-out active:scale-95 hover:scale-105'
          onclick="document.getElementById('learn-more-btn').click()"
        >
          Contáctanos
        </button>
      </div>
    </div>
  </div>
</nav>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    if (mobileMenuBtn && mobileMenu) {
      mobileMenuBtn.addEventListener('click', function () {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
